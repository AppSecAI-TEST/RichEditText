<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/html_options"
    
    >
    <LinearLayout

        android:layout_width="wrap_content"
        android:id="@+id/rich_toolbar"
        android:layout_height="24dp"
        android:gravity="center_vertical"

        >
        <ImageView

            android:id="@+id/makeBold"

            android:layout_width="24dp"

            android:layout_height="match_parent"
            android:alpha="0.7"

            android:src="@drawable/ic_bold" />

        <ImageView

            android:id="@+id/makeItalic"

            android:layout_width="24dp"

            android:layout_height="match_parent"

            android:alpha= "@string/initial_http_toggle_switcher_alpha"

            android:src="@drawable/ic_italic" />



        <ImageView

            android:id="@+id/makeUnderline"

            android:layout_width="24dp"

            android:layout_height="match_parent"

            android:alpha= "@string/initial_http_toggle_switcher_alpha"

            android:src="@drawable/ic_underline"
            />
        <ImageView

            android:id="@+id/makeHyperlink"

            android:layout_width="24dp"

            android:layout_height="match_parent"

            android:src="@drawable/ic_hyperlink" />
        <TextView

            android:id="@+id/makeForeground"

            android:layout_width="24dp"

            android:layout_height="match_parent"

            android:background="@color/lightgray"

            android:gravity="center_horizontal"

            android:text="A"

            android:textAlignment="center"

            android:textAppearance="?android:attr/textAppearanceLarge"

            android:textColor="@color/message_view_header_color" />



    </LinearLayout>
    <ImageButton
        android:id="@+id/list_toggle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:gravity="center_vertical"/>

</LinearLayout>